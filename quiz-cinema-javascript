<h2>Chi tra questi registi ha diretto 'Arancia meccanica'?</h2>
  <button onclick="domanda1('A')">A. Wim Wenders</button>
  <button onclick="domanda1('B')">B. Peter Jacksonin</button>
  <button onclick="domanda1('C')">C. Stanley Kubrick.</button>

  <p id="risultato1"></p>

  <script>
    function domanda1(risposta1) {
      let messaggio;

      switch (risposta1) {
        case 'A':
          messaggio = "Peccato, risposta sbagliata!";
          break;

        case 'B':
          messaggio = "Peccato, risposta sbagliata!";
          break;

        case 'C':
          messaggio = "Complimenti, risposta esatta!";
          break;

        default:
          messaggio = "Risposta non valida.";
      }

      document.getElementById("risultato1").innerText = messaggio;
    }
  </script>
  </div>
  
  
  
