<!--calcolo dell'area di un quadrato-->
<div class="box-calcolo">

  <h2 style="color: yellow;">Calcola l'area di un quadrato</h2>
    <h3 style="color: orange;">clicca qui sotto per scrivere le misure!</h3>

 <button onclick="calcolaArea()" class="bottone">Calcola Area</button>

  <p id="risultato"></p>

  <!--inserisco Java Script-->
<script>

  function calcolaArea() {
   var lato = prompt("Inserisci la lunghezza del lato del quadrato:");
   var area = lato * lato;
   document.getElementById("risultato").innerHTML = "L'area del quadrato è: " + area;
}

 </script>
